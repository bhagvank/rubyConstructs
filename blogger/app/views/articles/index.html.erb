<html>
<head>
<%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<meta charset="UTF-8">
</head>
<body>
<div class="wrapper">
<h1>Listing articles</h1>
 
<table border=1>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td> <%= link_to 'Show', article_path(article)%></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', articles_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }  %></td>
    </tr>
  <% end %>
</table>
 <h2>New Article</h2><%= link_to 'Create', new_article_path%>
</div>
</body>
</html>
