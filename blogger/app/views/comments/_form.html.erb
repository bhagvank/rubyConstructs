<html>
<head>
<%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<meta charset="UTF-8">
</head>
<body>
<div class="wrapper">
<%= form_with(model: [ @article, @article.comments.build ]) do |form| %>
   
   <div class="form-group"> 
    <label><%= form.label :commenter %></label>
    <%= form.text_field :commenter %>
  </div>
   <div class="form-group"> 
    <label><%= form.label :body %></label>
    <%= form.text_area :body %>
  </div>
   <div class="form-group"> 
    <label><%= form.label :date %></label>
    <%= form.date_field :date %>
  </div>
   <div class="form-group"> 
    <label><%= form.label :time %></label>
    <%= form.time_field :time %>
  </div>
   <div class="form-group"> 
    <label><%= form.label :isAuthor %></label>
    <%= form.check_box :isAuthor %>
  </div>
   <div class="form-group"> 
    <%= form.submit %>
  </div>
  
<% end %>
</div>
</body>
</html>
